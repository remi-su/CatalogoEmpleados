
@{
    ViewBag.Title = "ModalEliminar";
    Layout = "~/Views/Shared/_LayoutModals.cshtml";
}

@section headModal {
    <h3 class="modal-title">  Eliminar Empleado </h3>
}

@section bodyModal{
    <h4> ¿Esta seguro de eliminar el registro?</h4>

    <input type="hidden" id="idPersona" />
    <div class="form-group">
        <label for="text">Nombre:</label>
        <input type="email" class="form-control input-entrada" id="nombrePersona" readonly>
    </div>
    <div class="form-group">
        <label for="text">Apellido:</label>
        <input type="text" class="form-control input-entrada" id="apellidoPersona" readonly>
    </div>
    <div class="form-group">
        <label>Edad:</label>
        <input type="text" class="form-control input-entrada" id="edad" readonly>
    </div>
    <div class="form-group">
        <label for="email">Correo Electrónico:</label>
        <input type="email" class="form-control input-entrada" id="email" readonly>
    </div>
    <div class="form-group">
        <label>Teléfono:</label>
        <input type="text" class="form-control input-entrada" id="telefono" readonly>
    </div>
    <div class="form-group">
        <label>Ciudad:</label>
        <input type="text" class="form-control input-entrada" id="ciudad" readonly>
    </div>

}


@section footerModal{
    <button type="button" class="btn btn-success" id="botonConfirmarEliminar">Eliminar</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

}
